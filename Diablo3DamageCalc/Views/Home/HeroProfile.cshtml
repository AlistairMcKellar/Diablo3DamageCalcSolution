@model Diablo3DamageCalc.Models.HeroesModel
@{
    ViewBag.Title = "HeroProfile";
}

<h2>@Model.Hero.name</h2>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4"><p>stats</p></div>
        <div class="col-md-8"><p>stats2</p></div>
    </div>

    @{
        for (int i = 0; i < Model.Hero.skills.active.Length; i++)

        {
            D3DataContracts.Skill skill;
            D3DataContracts.Rune rune;
            if (i % 3 == 0)
            {
                <div class="row">
                    @for (int j = i; j < i + 3; j++)
                    {
                        skill = Model.Hero.skills.active[j].skill;
                        rune = Model.Hero.skills.active[j].rune;
                            <div class="col-md-4">
                                <p><strong> Skill: @skill.name</strong></p>
                                <p>@skill.description</p>
                                <p><strong>Rune: @rune.name</strong></p>
                                <p>@rune.description</p>
                            </div>
                    }

                </div>
            }
        }
    }
</div>
